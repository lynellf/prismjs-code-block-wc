		"babel-plugin-prismjs": "^1.1.1",
		"concurrently": "^4.1.1",
		"typescript": "^3.5.3",
		"webpack": "^4.29.0",
		"webpack-cli": "^3.2.1",
		"webpack-dev-server": "^3.1.14",
